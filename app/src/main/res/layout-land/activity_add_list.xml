<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddList">

    <EditText
            android:layout_width="572dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/insertList"
            android:hint="List Name"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="79dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="80dp"
            android:layout_marginTop="82dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/addListButton"/>
    <Button
            android:text="add list"
            android:layout_width="88dp"
            android:layout_height="48dp"
            android:id="@+id/addListButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="321dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="322dp" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/insertList"
            android:layout_marginBottom="167dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>